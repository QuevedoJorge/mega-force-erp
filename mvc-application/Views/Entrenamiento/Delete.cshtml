@model pe.com.megaforce.Entrenamiento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminacion de Entrenamiento</h2>

<h3>¿Estas seguro que quieres eliminar el Entrenamiento?</h3>
<div>
    <h4>Entrenamiento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.tipo)*@
            Tipo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.fechaHora)*@
            Fecha y Hora
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaHora)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.duracion)*@
            Duracion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duracion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.ubicacion)*@
            Ubicacion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ubicacion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.capacidadMaxima)*@
            Capacidad Maxima
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidadMaxima)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Trainer.nombre)*@
            Nombre del Trainer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trainer.nombre)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Locales.tipo)*@
            Tipo del Local
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Locales.tipo)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.estado)*@
            Estado
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.estado)*@
            @if(Model.estado)
            {
                <span>Habilitado</span>
            }
            else
            {
                <span>Deshabilitado</span>                
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "Index", null , new {@class ="btn btn-dark"})
        </div>
    }
</div>
