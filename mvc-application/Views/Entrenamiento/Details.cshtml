@model pe.com.megaforce.SP_BuscarEntrenamientoXCodigo_Result

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de Entrenamiento</h2>

<div>
    <h4>Entrenamiento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.tipo)*@
            Tipo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.fechaHora)*@
            Fecha y Hora
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaHora)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.duracion)*@
            Duracion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duracion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.ubicacion)*@
            Ubicacion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ubicacion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.capacidadMaxima)*@
            Capacidad Maxima
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidadMaxima)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Trainer.nombre)*@
            Nombre del Trainer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreTrainer)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Localtipo)*@
            Tipo de Local
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipoLocal)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.estado)*@
            Estado
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.estado)*@
            @if(Model.estado)
            {
                <span>Habilitado</span>
            }
            else
            {
                <span>Deshabilitado</span>                
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Actualizar", "Edit", new { id = Model.codigoEntrenamiento }, new {@class ="btn btn-success"})
    @Html.ActionLink("Regresar", "Index", null , new {@class ="btn btn-dark"})
</p>
