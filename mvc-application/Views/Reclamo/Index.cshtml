@model IEnumerable<mvc_application.Reclamo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reclamos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Cliente.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codigo }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codigo }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Deshabilitar", "Disable", new { id=item.codigo }, new { @class = "btn btn-danger" }) |
            @Html.ActionLink("Habilitar", "Enable", new { id=item.codigo }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
